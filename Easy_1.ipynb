      "source": [
        "def lengthh(s):\n",
        "    words = s.rstrip().split()\n",
        "    if not words:\n",
        "        return 0\n",
        "\n",
        "    return len(words[-1])\n",
        "sent = input(\"enter a sentence: \")\n",
        "result = lengthh(sent)\n",
        "print(\"Length of the last word:\", result)"
      ]
